{
  "name": "ewally-challenge",
  "version": "0.0.0",
  "description": "Hands-on challenge for nodeJS developer vacancy at Ewally",
  "main": "index.js",
  "scripts": {
    "start": "sucrase-node src/main/server.ts",
    "test": "jest --silent --noStackTrace --runInBand  --no-cache",
    "test:staged": "npm test -- --passWithNoTests --detectOpenHandles",
    "test:verbose": "jest --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-lenodeoliveira:lenodeoliveira/ewally-challenge.git"
  },
  "author": "John Oliveira",
  "license": "MIT",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.31",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "git-commit-msg-linter": "^4.1.2",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "lint-staged": "^12.4.1",
    "sucrase": "^3.21.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.1",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "express": "^4.18.1",
    "fast-glob": "^3.2.11",
    "mongodb": "^4.5.0"
  }
}
